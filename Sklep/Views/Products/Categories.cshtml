@model IEnumerable<Sklep.Models.Category>

@{
    ViewData["Title"] = "Lista Kategorii";
}

<h1>Lista Kategorii</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nazwa Kategorii</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
            </tr>
        }
    </tbody>
</table>
