@model Sklep.Models.Order

@{
    ViewData["Title"] = "Usuń Zamówienie";
}

<h1 class="my-3">@ViewData["Title"]</h1>

<h3>Czy na pewno chcesz usunąć to zamówienie?</h3>
<div>
    <h4>Zamówienie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            Produkty
        </dt>
        <dd class="col-sm-10">
            @foreach (var op in Model.OrderProducts)
            {
                <p>@op.Product.Name</p>
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Usuń" class="btn btn-danger" onclick="return confirm('Czy na pewno chcesz usunąć to zamówienie?');" />
            <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
        </div>
    </form>
</div>
