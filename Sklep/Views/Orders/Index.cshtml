@model IEnumerable<Sklep.Models.Order>

@{
    ViewData["Title"] = "Lista Zamówień";
}

<h1 class="my-3">@ViewData["Title"]</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Dodaj Nowe Zamówienie
    </a>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Użytkownik</th>
            <th>Data Zamówienia</th>
            <th>Produkty</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.User.FirstName @order.User.LastName</td>
                <td>@order.OrderDate.ToString("dd-MM-yyyy")</td>
                <td>
                    @foreach (var op in order.OrderProducts)
                    {
                        <p>@op.Product.Name</p>
                    }
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm" title="Szczegóły">
                            <i class="fas fa-info-circle"></i> Szczegóły
                        </a>
                        <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning btn-sm" title="Edytuj">
                            <i class="fas fa-edit"></i> Edytuj
                        </a>
                        <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger btn-sm" title="Usuń">
                            <i class="fas fa-trash-alt"></i> Usuń
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
